<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zeroth_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/first_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/calculator"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|left"
            android:text="SuperCalc"
            android:textColor="@color/black_stroke"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/dark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight=".5"
            app:srcCompat="@drawable/dark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/black_cal_border"
            android:gravity="bottom|right"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@color/black_show"
            android:gravity="bottom|right"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@drawable/black_r"
            android:padding="10dp"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@drawable/black_border_main"
            android:padding="10dp"
            android:text="ce"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@drawable/black_border_main"
            android:padding="10dp"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@drawable/black_border_main"
            android:padding="10dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@drawable/black_border_main"
            android:padding="10dp"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifth_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@drawable/black_border_main"
            android:padding="10dp"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixth_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@drawable/black_border_main"
            android:padding="10dp"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seventh_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/d0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="@string/zero"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_number"
            android:padding="10dp"
            android:text="."
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@drawable/black_g"
            android:padding="10dp"
            android:text="="
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

</LinearLayout>